
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>



<%= form_tag edit_user_path(@user), method: :get, authentication: false do %>
	<%= label_tag :search, "Symbol lookup:" %>
	<%= text_field_tag :search, nil,  :placeholder => "Company name" %>
	<%= submit_tag "Look up" %>
<% end %>

<% if @results %>
	<% i=0 %>
	<% while i<@results.length %>
		<%= @results[i]["symbol"] %> <%= @results[i]["name"] %> <%= @results[i]["exchDisp"] %> <br>
		<% i += 1 %>
	<% end %>
<% end %>


