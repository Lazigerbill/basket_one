<div class="side-image">

  <%= render '/layouts/side_bar' %>

  <div class="content">
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "flash-notice" %>
    <% end %>

    <h2>My Portfolio:</h2>
    <% if @user.stocks.length>0 %>
      <table class="table-borders">
        <thead>
          <tr>
            <th>Stock name</th>
            <th>Ticker Symbol</th>
            <th>Remove?</th>
          </tr>
        </thead>
        <tbody>
          <% @user.stocks.order(:yahoo_symbol).each do |stock| %>
          <tr>
            <td><%= stock.company_name %></td>
            <td><%= stock.yahoo_symbol %></td>
            <td>
              <button>
                <%= link_to 'Remove', stock, method: :delete, data: { confirm: 'Are you sure?' } %>
              </button>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h6>You currently don't have any stocks in your portfolio.</h2>
    <% end %>
    
    <p>*add stocks to your portfolio by using the search bar at the top of this page.</p>

  </div>
</div>

