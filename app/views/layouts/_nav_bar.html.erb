	<!-- HEADER -->
	<% if current_user %>
	<header class="navigation">
		<div class="navigation-wrapper">
			<a href="javascript:void(0)" class="logo">
				<%= image_tag "logo_white.gif" %>
			</a>
			<a href="" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
			<div class="nav">
				<ul id="navigation-menu">
					<li class="nav-link"><%= link_to "My Portfolio", user_path(current_user) %></li>
					<li class="nav-link"><%= link_to "About Us", index_about_path %></li>
					<li class="nav-link"><a href="mailto:chaukbill@gmail.com?Subject=Basket%20One" target="_top">Contact</a></li>
					<li class="nav-link more"><a href="javascript:void(0)">More</a>
						<ul class="submenu">
							<li><a href="javascript:void(0)">My Transactions</a></li>
							<li><a href="javascript:void(0)">Rankings</a></li>
							<li class="more"><a href="javascript:void(0)">Item with submenu</a>
								<ul class="submenu">
									<li><a href="javascript:void(0)">Sub-submenu Item</a></li>
									<li><a href="javascript:void(0)">Another Item</a></li>
								</ul>
							</li>
							<li class="more"><a href="javascript:void(0)">Another submenu</a>
								<ul class="submenu">
									<li><a href="javascript:void(0)">Sub-submenu</a></li>
									<li><a href="javascript:void(0)">An Item</a></li>
								</ul>
							</li>
						</ul>
					</li>
				</ul>
			</div>


			<div class="navigation-tools">
				<div class="search-bar">
					<div class="search-and-submit">

						<%= form_tag edit_user_path(@user), method: :get, authentication: false do %>
						<%= text_field_tag :search, nil,  :placeholder => "Company name", :type => "search" %>

						<button type="submit">
							<img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png" alt="Search Icon">
						</button>
						<% end %>

					</div>


				</div>
				<% if current_user %>
				<%= link_to "Logout", :logout, method: :post, :class => "sign-up" %>
				<% else %>
				<%= link_to 'Sign in', auth_at_provider_path(:provider => :twitter), :class => "sign-up" %>	
				<% end %>
			</div>
		</div>
	</header>
	<% end %>