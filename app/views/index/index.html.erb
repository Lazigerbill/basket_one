<!-- This is the news part -->

<div class = "topbar">
	<div class = "news_window">
		<ul class = "newsticker">
		</ul>
	</div>
</div>


<script src = "https://query.yahooapis.com/v1/public/yql?q=select%20title%2C%20link%20from%20rss%20where%20url%3D%22http%3A%2F%2Ffinance.yahoo.com%2Frss%2Fheadline%3Fs%3D<%= @quote_ticker %>%22&format=json&diagnostics=true&env=store%3A%2F%2Fdatatables.org%2Falltableswithkeys&callback=show_news"></script>


<!-- This is the ticker part -->

<div class = "ticker_window">
	<div class = "ticker_window_box">	
			<img class = "logo" src="http://logonoid.com/images/td-bank-logo.png" alt=""></img>
		<div id = "company">
		</div><br>
			<!-- <div id = "tick"></div> -->
			<div id = "last_trade"></div>
			<div id = "change"></div>
		
		<div id = "bottom_left">
			<span>Previous Close: </span>
			<span id = "pre_close"></span>
			<div id = "last_update">Last updated: <span id = "timeago"></span></div>
		</div>
		
		<div id = "bottom_right">
			<span>52-week range </span>
			<span id = "range"> </span>
		</div>
	</div>
</div>
<%= javascript_tag do %>
	window.qticker = "<%= @quote_ticker %>";
<% end %>
<script src = "https://query.yahooapis.com/v1/public/yql?q=select%20*%20from%20yahoo.finance.quote%20where%20symbol%20in%20(%22<%= @quote_ticker %>%22)&format=json&diagnostics=true&env=store%3A%2F%2Fdatatables.org%2Falltableswithkeys&callback=show_quote"></script>


<!-- This is the Twitter window -->
<div class = "twitter_window">
	

	
	<ul class = "tweet_list">
		<% @tweets.each do |key, value| %>
			<li class = "tweet">
				<%= image_tag (key[:profile_img_url]), class: "profile_pic" %>
				<div class = "tweet_content"> 
					<%= key[:text] %> <br>
					<div class = "tweet_info">					
						by <em><%= key[:username] %></em> 
						<abbr class="timeago"><%= time_ago_in_words(key[:tweet_created_at]) %> ago</abbr> </div>
					</div>
			</li>
		<% end %>
	</ul>

	<div class = "tweet">
		<%= image_tag (@most_retweeted[:profile_img_url]), class: "profile_pic" %>
		<div class = "tweet_content"> 
			<%= @most_retweeted[:text] %> <br>
			<div class = "tweet_info">					
				by <em><%= @most_retweeted[:username] %></em> 
				Retweeted: <span><%= @most_retweeted[:retweet_count] %></span> times
				<div class="timeago"><%= time_ago_in_words(@most_retweeted[:tweet_created_at]) %> ago</div>
				<a href="https://twitter.com/intent/retweet">retweet</a> 
			</div>
		</div>
	</div>
	<div class = "tweet_counts">There are <span id="sparkline">&nbsp;</span> tweets!<%= image_tag('https://g.twimg.com/dev/sites/default/files/images_documentation/bird_blue_32.png') %></div>
</div>

<%= javascript_tag do %>
	window.tweet_count = <%= @tweet_array %>;
<% end %>

<!-- This is the fundamentals window -->

<div class = "fundamentals_window">
	<div class = "fundamentals_window_box">
		<h1>Fundamental Analysis</h1>	
		<div>Ticker: <span id = "trading_ticker"></span></div>
		<div>Sector: <span id = "sector"></span></div>
		<div>Industry: <span id = "industry"></span></div>

		<div id = "PEGChart" class = "chart"></div>
		<div id = "PEChart" class = "chart"></div>
		<div id = "growth_est" class = "chart"></div>
	</div>

<script src = "https://query.yahooapis.com/v1/public/yql?q=SELECT%20*%20FROM%20yahoo.finance.analystestimate%20WHERE%20symbol%3D'<%= @quote_ticker %>'&format=json&diagnostics=true&env=store%3A%2F%2Fdatatables.org%2Falltableswithkeys&callback=load_fundamentals"></script>

</div>

<!-- This is the line chart window -->


<div class = 'chart'>
	<div id="container" style="height: 400px; width: 600px"></div>
</div>

