<!-- This is the news part -->

<div class = "topbar">
	<div class = "news_window">
		<ul class = "newsticker">
		</ul>
	</div>
</div>


<script src = "https://query.yahooapis.com/v1/public/yql?q=select%20title%2C%20link%20from%20rss%20where%20url%3D%22http%3A%2F%2Ffinance.yahoo.com%2Frss%2Fheadline%3Fs%3Dtd%22&format=json&diagnostics=true&env=store%3A%2F%2Fdatatables.org%2Falltableswithkeys&callback=show_news"></script>


<!-- This is the ticker part -->

<div class = "ticker_window">
	<div class = "ticker_window_box">	
		<div id = "company">
			<img class = "logo" src="http://logonoid.com/images/td-bank-logo.png" alt="">
		</div><br>
		<div id = "last">

			<span id = "last_trade"></span>
			<div id = "change">
			</div>
		</div>
		
		<div id = "pre_close">
			<span>Previous Close: </span>
			<div id = "last_update">Last updated: <%= Time.now %></div>
		</div>
		<span id = "range">52-week range </span>
	</div>
</div>

<script src = "https://query.yahooapis.com/v1/public/yql?q=select%20*%20from%20yahoo.finance.quote%20where%20symbol%20in%20(%22<%= @quote_ticker %>%22)&format=json&diagnostics=true&env=store%3A%2F%2Fdatatables.org%2Falltableswithkeys&callback=show_quote"></script>

<!-- This is the Twitter window -->
<div class = "twitter_window">
	<% counter = 0 %>
	
	<ul class = "tweet_list">
		<% @tweets.each do |key, value| %>
			<li class = "tweet">
				<%= image_tag (key[:profile_img_url]), class: "profile_pic" %>
				<div class = "tweet_content"> 
					<%= key[:text] %> <br>
					by <em><%= key[:username] %></em> <%= key[:tweet_created_at] %> 
					<span class ="retweets">retweets: <%= key[:retweet_count] %></span> <br>
				</div>
				<% counter += 1 %>
			</li>
		<% end %>
	</ul>


	There are <%= counter %> tweets!
</div>

	<%= @tweet_count %>

